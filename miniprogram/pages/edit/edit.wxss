/* miniprogram/pages/edit/edit.wxss */
page {
  height: 100%;
  overflow: hidden;
}
.edit_box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;
  overflow: hidden;
}
.edit_main {
  max-height: 540rpx;
  position: relative;
}
#painter {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: auto;
}
.move {
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  opacity: .5;
  z-index: 9;
}
.edit_scroll {
  flex: 1;
  overflow: hidden;
  padding: 20rpx 0;
  background-color: #f7f7f7;
}
.edit_attrs {
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.edit_text {
  display: inline-block;
  width: 168rpx;
  text-align: left;
}
.edit_inputs {
  flex: 1;
}
.edit_btns {
  width: 100%;
  display: flex;
  padding: 20rpx 0;
  flex-wrap: wrap;
}
.edit_select_ig {
  padding: 0rpx 18rpx;
  height: 50rpx;
  color: #333;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  margin-left: 15rpx;
  font-size: 20rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.edit_info {
  width: 100%;
  height: 60rpx;
  background-color: #E6A23C;
  font-size: 24rpx;
  color: #fff;
  line-height: 60rpx;
}
.edit_info_animate {
  width: 900rpx;
  animation: wordsLoop 15s infinite linear;
  position: absolute;
}
@keyframes wordsLoop {
  0% {
      transform: translateX(760rpx);
      -webkit-transform: translateX(760rpx);
  }
  100% {
      transform: translateX(-100%);
      -webkit-transform: translateX(-100%);
  }
}
.edit_button_box {
  padding: 0;
}
.preview_box {
  position: fixed;
  width: 100%;
  min-height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
}
.preview_ig {
  width: 660rpx;
  height: auto;
  position: absolute;
  z-index: 100;
}
.edit_slect_ig {
  margin-bottom: 0;
}